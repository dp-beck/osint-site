extends layout

block content
  h1= title

  form(method='POST' action='') 
    div.form-group
      label(for="username") Username:   
      input#username.form-control(type="text", placeholder="Username" name="username" required="true" value=(undefined===user ? '' : user.username) ) 
 
      label(for="password") Password:   
      input#password.form-control(type="password", placeholder="Password" name="password" required="true" ) 

      label(for="firstName") First Name:   
      input#firstName.form-control(type="text", placeholder="First Name" name="firstName" required="true" value=(undefined===user ? '' : user.firstName) ) 

      label(for="lastName") Last Name:   
      input#lastName.form-control(type="text", placeholder="Last Name" name="lastName" value=(undefined===user ? '' : user.lastName) ) 
    button.btn.btn-primary(type="submit") Submit
  
  if errors 
    ul 
      for error in errors 
        li!=error.msg 