extends layout 

block content 
    h1=title 
    
    form(method='POST' action='')
        div.form-group
            label(for='text') Comment:
            textarea#comment.form-control(type='textarea', placeholder='Comment on source' name='text' required='true') #{undefined===comment ? '' : comment.text}  
        button.btn.btn-primary(type='submit') Submit

                
    if errors
        ul
            for error in errors
                li!= error.msg

